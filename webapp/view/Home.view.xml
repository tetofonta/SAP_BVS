<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="BVS.controller.Home"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout">
			<Page title="{i18n>homeTitle}">
				<content>
						<HBox justifyContent="End">
						<ComboBox id="sqList" change="loadTeam"
							items="{
								path: '/squadre'			
							}">
							<core:Item key="{squadra}" text="{squadra}" />
						</ComboBox>
						<Button icon="sap-icon://add" type="Accept" press="addTeam" class="sapUiSmallMarginEnd"></Button>
						</HBox>
						
							
							<l:VerticalLayout id="containerLayout" width="100%" >
								<l:BlockLayout id="BlockLayout" background="Default">
									<l:BlockLayoutRow accentCells="Accent1">
										<l:BlockLayoutCell
												id="Accent1"
												width="1"
												title="Giocatori"><VBox width="100%" class="darkbgmenodark">
								
								<List
									mode="Delete"
									delete="deletePlayer"
									items="{
										path: '/players'
									}">
									<StandardListItem
										type="Active"
										press="playerSelect"
										title="{nome}"
										description="{numero}"
										icon="{foto}"/>
								</List>
							</VBox>
										</l:BlockLayoutCell>
										
										<l:BlockLayoutCell
												titleAlignment="End"
												title="Partite disputate">
<VBox width="100%"  class="darkbg">
								<List
									mode="Delete"
									delete="deleteMatch"
									items="{
										path: '/saved'
									}">
									<StandardListItem
										type="Active"
										title="{squadra} - {avversario}"
										description="{data}" 
										info="Id: {id}"
										press="getReport"/>
								</List>
							</VBox>										</l:BlockLayoutCell>
									</l:BlockLayoutRow>

								</l:BlockLayout>
							</l:VerticalLayout>
							
							
							
				</content>
				<footer>
					<OverflowToolbar> 
						<Button id="as" press="addPlayer" type="Accept" class="showButtons" icon="sap-icon://add" text="Nuovo Giocatore"/>
						<ToolbarSpacer/>
						<Button id="newMatch" press="newMatch" type="Accept" class="showButtons" icon="sap-icon://begin" text="Nuova partita"/>
						<Button id="deleteTeam" press="deleteTeam" type="Reject" class="showButtons" icon="sap-icon://delete" text="Elimina squadra"/>
					</OverflowToolbar>
				</footer>
			</Page>
</mvc:View>