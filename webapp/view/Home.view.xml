<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="BVS.controller.Home"
	xmlns:html="http://www.w3.org/1999/xhtml">
			<Page title="{i18n>homeTitle}">
				<content>
					<VBox justifyContent="Center">
						<HBox justifyContent="End">
						<ComboBox change="loadTeam"
							items="{
								path: '/squadre'			
							}">
							<core:Item key="{squadra}" text="{squadra}" />
						</ComboBox>
						</HBox>
						<HBox justifyContent="Center">
							<VBox width="100%" class="darkbgmenodark">
								<Title text="Giocatori"/>
								<List
									mode="Delete"
									delete="deletePlayer"
									items="{
										path: '/players'
									}">
									<StandardListItem
										type="Active"
										press="playerSelect"
										title="{nome}"
										description="{numero}"
										icon="{foto}"/>
								</List>
							</VBox>
							<VBox width="100%"  class="darkbg">
								<Title text="Partite Giocate"/>
								<List
									mode="Delete"
									delete="deleteMatch"
									items="{
										path: '/saved'
									}">
									<StandardListItem
										title="{squadra} - {avversario}"
										description="{data}" />
								</List>
							</VBox>
						</HBox>
					</VBox>
				</content>
				<footer>
					<OverflowToolbar> 
						<Button id="as" press="newPlayer" type="Accept" class="showButtons" icon="sap-icon://add" text="Nuovo Giocatore"/>
						<ToolbarSpacer/>
						<Button id="newMatch" press="newMatch" type="Accept" class="showButtons" icon="sap-icon://begin" text="Nuova partita"/>
						<Button id="deleteTeam" press="deleteTeam" type="Reject" class="showButtons" icon="sap-icon://delete" text="Elimina squadra"/>
					</OverflowToolbar>
				</footer>
			</Page>
</mvc:View>