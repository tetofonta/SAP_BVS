<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="BVS.controller.Player"
	xmlns:html="http://www.w3.org/1999/xhtml">
			<Page title="{i18n>playerTitle}">
				<content>
					<VBox>
						<HBox>
							<VBox>
								<Image
									id="profilePic"
									src=""
									densityAware="false"
									width='250px'
									height='250px'
									>
									<layoutData>
										<FlexItemData growFactor="1" />
									</layoutData>
								</Image>
								<Button icon="sap-icon://add-photo" press="changePic"/>
							</VBox>
							<VBox>
								<Label text="Nome e Cognome" labelFor="nomecognomeField"/>
								<Input id="nomecognomeField" required="true"/>
								<Label text="Numero giocatore" labelFor="numeroField"/>
								<Input id="numeroField" required="true"/>
								<Label text="Data di nascita" labelFor="datanascitaField"/>
								<DatePicker id="datanascitaField" valueFormat="yyyy-MM-dd"/>
							</VBox>
						</HBox>
					</VBox>
				</content>
			</Page>
</mvc:View>