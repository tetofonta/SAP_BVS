<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="BVS.controller.Login"
          xmlns:html="http://www.w3.org/1999/xhtml">
    <Page title="Better Volley Scouting">
        <content>
            <VBox fitContainer="true" justifyContent="Start" alignItems="Center">
                <items>
                    <Image src="./image/Logo.jpeg"/>
                    <Input id="username" placeholder="Username" value="admin"></Input>
                    <Input id="password" placeholder="Password" type="Password" value="admin"></Input>
                    <Button width="192px" id="enterBtn" text="Entra" type="Emphasized" press="doLogin"></Button>
                	
                </items>
            </VBox>
            <HBox justifyContent="End" alignContent="End">
                		<items>
                			<Image src="http://bettervolleyscouting.altervista.org/download.png"/>
                		</items>
                	</HBox>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button icon="sap-icon://hint" press="openAbout" width="192px"/>
                <ToolbarSpacer/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>