<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="BVS.controller.Login"
          xmlns:html="http://www.w3.org/1999/xhtml">
    <Page title="Better Volley Scouting">
        <content>
            <VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
                <items>
                    <Image src="./image/Logo.jpeg"/>
                    <Input id="user" placeholder="Username"></Input>
                    <Input id="password" placeholder="Password" type="Password"></Input>
                    <Button width="12rem" text="Enter" type="Emphasized" press="doLogin"></Button>
                </items>
            </VBox>
            <footer>
                <HBox justifyContent="Center">
                    <Button icon="sap-icon://hint" press="openAbout"/>
                </HBox>
            </footer>
        </content>
    </Page>
</mvc:View>